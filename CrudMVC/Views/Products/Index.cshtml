<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">List of Products</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="Upsert" asp-controller="Products" class="btn btn-info form-control text-white">
        Add New Product</a>
    </div>
    <div class="col-12 border p-3">
        <table id="DT_loadProducts" class="table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>SKU</th>
                    <th>Description</th>
                    <th>Cost</th>
                    <th>Stock Units</th>
                    <td></td>
                </tr>
            </thead>

            @if (Model != null)
            {
                foreach (Products item in Model)
                {
                    <tr>
                        <td>
                            @item.SKU
                        </td>
                        <td>
                            @item.Description
                        </td>
                        <td>
                            @item.Price
                        </td>
                        <td>
                            @item.AvailableQty
                        </td>
                        <td>
                            <form asp-action="Delete" method="post" asp-route-id="@item.Id">
                                <button asp-controller="Products" asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-success text-white">Edit</button>
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                    }
                }
            
        </table>
    </div>
</div>
